<odoo>
    <data>
        <!-- Inherit the invoice form view -->
        <record id="view_move_form_inherit_add_payment_fields" model="ir.ui.view">
            <field name="name">account.move.form.inherit.payment.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Insert the fields after the existing payment reference -->
                <xpath expr="//div[@class='o_col']" position="after">
                        <field name="available_payment_method_line_ids" invisible="1"/>
                        <field name="available_payment_journal_ids" invisible="1"/>
                        
                        <label for ="mo_payment_type" style="font-weight:bold;" string="payment Type"/>
                        <field name="mo_payment_type" nolabel="1"/>

                        <label for ="payment_journal_id" style="font-weight:bold;" string="payment Journal" invisible="mo_payment_type != 'ghair_ajil'"/>
                        <field name="payment_journal_id" domain="[('id', 'in', available_payment_journal_ids)]" nolabel="1" invisible="mo_payment_type != 'ghair_ajil'"/>
                        
                        <label for ="payment_method_id" style="font-weight:bold;" string="payment method" invisible="mo_payment_type != 'ghair_ajil'"/>
                        <field name="payment_method_id" nolabel="1" invisible="mo_payment_type != 'ghair_ajil'"/>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
